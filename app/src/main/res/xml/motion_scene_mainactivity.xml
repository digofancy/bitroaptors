<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/MainTransition"
        motion:constraintSetStart="@id/startState"
        motion:constraintSetEnd="@id/endState"
        motion:duration="300"
        motion:motionInterpolator="linear">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchRegionId="@id/flBottomSheet"/>

    </Transition>


    ////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////

    <ConstraintSet android:id="@+id/startState">

        <Constraint
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/white"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/cvCalendar"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            motion:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <!--Constraint
            android:id="@+id/flBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            motion:layout_constraintTop_toBottomOf="@id/cvCalendar"
            motion:layout_constraintBottom_toBottomOf="parent"/-->

    </ConstraintSet>

    ////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////

    <ConstraintSet android:id="@+id/endState">

        <Constraint
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/white"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/cvCalendar"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            motion:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <!--Constraint
            android:id="@+id/flBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="635dp"
            motion:layout_constraintTop_toBottomOf="@id/cvCalendar"
            motion:layout_constraintBottom_toBottomOf="parent"/-->

    </ConstraintSet>
</MotionScene>